<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Electronic Bulletin Board", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
        	<li <%if current_page?(root_path) %> class="active" <%end%> ><%= link_to "Home", root_path %></li>
					<% if signed_in? %>
          <li <%if current_page?(current_user)%> class="active" <%end%> ><%= link_to "Profile", user_path(current_user) %></li>
					<li <%if current_page?(users_path)%> class="active" <%end%> ><%= link_to "Users", users_path %></li>
					<li id="fat-menu" class="dropdown">
						<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
					</li>
					<% else %>
					<li <%if current_page?(signin_path) %> class="active" <%end%> ><%= link_to "Sign in", signin_path %></li>
					<% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>